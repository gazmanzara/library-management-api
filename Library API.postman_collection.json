    {
      "name": "Books",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/books",
            "description": "Retrieve all books"
          }
        },
        {
          "name": "Search Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/books/search?title={{title}}&isbn={{isbn}}&authorId={{authorId}}&year={{year}}",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "books", "search"],
              "query": [
                {
                  "key": "title",
                  "value": "{{title}}",
                  "description": "Search by title"
                },
                {
                  "key": "isbn",
                  "value": "{{isbn}}",
                  "description": "Search by ISBN"
                },
                {
                  "key": "authorId",
                  "value": "{{authorId}}",
                  "description": "Search by author ID"
                },
                {
                  "key": "year",
                  "value": "{{year}}",
                  "description": "Search by publication year"
                }
              ]
            },
            "description": "Search books with various criteria"
          }
        },
        {
          "name": "Create Book",
          "request": {
            "method": "POST",
            "url": "http://localhost:8080/api/books",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Harry Potter and the Philosopher's Stone\",\n    \"description\": \"The first book in the Harry Potter series\",\n    \"isbn\": \"9780747532743\",\n    \"publicationYear\": 1997,\n    \"imgUrl\": \"https://example.com/book-cover.jpg\",\n    \"authorId\": 1,\n    \"categoryIds\": [1]\n}"
            },
            "description": "Create a new book"
          }
        },
        {
          "name": "Update Book",
          "request": {
            "method": "PUT",
            "url": "http://localhost:8080/api/books/1",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"title\": \"Harry Potter and the Philosopher's Stone\",\n    \"description\": \"Updated description: The first book in the Harry Potter series, where Harry discovers he's a wizard\",\n    \"isbn\": \"9780747532743\",\n    \"publicationYear\": 1997,\n    \"imgUrl\": \"https://example.com/book-cover-updated.jpg\",\n    \"authorId\": 1,\n    \"categoryIds\": [1, 2]\n}"
            },
            "description": "Update an existing book"
          }
        },
        {
          "name": "Get Book by ID",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/books/1",
            "description": "Get book by ID"
          }
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "url": "http://localhost:8080/api/books/1",
            "description": "Delete book by ID"
          }
        }
      ]
    },
    {
