{
  "info": {
    "_postman_id": "library-api-collection",
    "name": "Library API",
    "description": "Collection for testing Library Management System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authors",
      "item": [
        {
          "name": "Get All Authors",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/authors",
            "description": "Retrieve all authors"
          }
        },
        {
          "name": "Search Authors",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/authors/search?name={{authorName}}",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "authors", "search"],
              "query": [
                {
                  "key": "name",
                  "value": "{{authorName}}"
                }
              ]
            },
            "description": "Search authors by name"
          }
        },
        {
          "name": "Create Author",
          "request": {
            "method": "POST",
            "url": "http://localhost:8080/api/authors",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"J.K. Rowling\",\n    \"biography\": \"British author best known for the Harry Potter series\"\n}"
            },
            "description": "Create a new author"
          }
        },
        {
          "name": "Update Author",
          "request": {
            "method": "PUT",
            "url": "http://localhost:8080/api/authors/1",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"J.K. Rowling\",\n    \"biography\": \"Updated biography: British author best known for the Harry Potter series and other works\"\n}"
            },
            "description": "Update an existing author"
          }
        },
        {
          "name": "Get Author by ID",
          "request": {
            "method": "GET",
            "url": "http://localhost:8080/api/authors/1",
            "description": "Get author by ID"
          }
        },
        {
          "name": "Delete Author",
          "request": {
            "method": "DELETE",
            "url": "http://localhost:8080/api/authors/1",
            "description": "Delete author by ID"
          }
        }
      ]
    },
